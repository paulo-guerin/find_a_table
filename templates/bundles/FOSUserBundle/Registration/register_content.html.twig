{% trans_default_domain 'FOSUserBundle' %}
<h2 class = "pageTitle d-flex justify-content-center">Formulaire d'inscription</h2>
<div class ="d-flex justify-content-center">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="gameShowDescription">
            {{ form_label(form.email, 'Email') }}
            <br>
            {{ form_widget(form.email, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.username, 'Pseudo')  }}
            <br>
            {{ form_widget(form.username, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.firstname, 'Pr√©nom') }}
            <br>
            {{ form_widget(form.firstname, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.lastname, 'Nom') }}
            <br>
            {{ form_widget(form.lastname, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.gender, 'Genre') }}
            <br>
            {{ form_widget(form.gender, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.birthdate, 'Date de naissance') }}
            <br>
            {{ form_widget(form.birthdate, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.plainPassword.first, 'Mot de passe') }}
            <br>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
            {{ form_label(form.plainPassword.second, 'Confirmez le mot de passe') }}
            <br>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form_style'} }) }}
            <br>
            <br>
        </div>
        <div>
            <input type="submit" value="Inscription"  class="btn btn-primary"/>
        </div>
    {{ form_end(form) }}
</div>
